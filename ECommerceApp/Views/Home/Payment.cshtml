@model Common.Models.PaymentViewModel

@{
    ViewData["Title"] = "Payment";
}

<h1 style="text-align: center; color: #5a6268;">Payment</h1>

<div style="margin: auto; width: 50%; padding: 10px;">
    <div style="background-color: #e9ecef; padding: 20px; border-radius: 15px;">
        <h2>Payment Details</h2>

        <p><strong>Order ID:</strong> @Model.OrderId</p>
        <p><strong>Price:</strong> @Model.Price</p>
    </div>

    <div style="margin-top: 20px; background-color: #e9ecef; padding: 20px; border-radius: 15px;">
        <h2>Payment Form</h2>

        @using (Html.BeginForm("Payment", "Home", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.OrderId)
            @Html.HiddenFor(model => model.Price)
            @Html.HiddenFor(model => model.Asin)

            <input type="hidden" name="OrderId" value="@Model.OrderId" />
            <input type="hidden" name="Price" value="@Model.Price" />
            <input type="hidden" name="Asin" value="@Model.Asin" />


            <div>
                <label for="Address"><strong>Address:</strong></label>
                <input type="text" id="Address" name="Address" required style="width: 100%; padding: 10px; margin-top: 5px;" />
            </div>

            <div>
                <label for="CardNumber"><strong>Card Number:</strong></label>
                <input type="text" id="CardNumber" name="CardNumber" required style="width: 100%; padding: 10px; margin-top: 5px;" />
            </div>
            <input type="submit" value="Submit Payment" style="margin-top: 10px; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer;" />
        }
    </div>
</div>
